@model Fall2025_Project3_jdpeacock.Models.ViewModels.ActorInfoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.photo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Actor.photo != null)
            {
                var base64 = Convert.ToBase64String(Model.Actor.photo);
                var imgSrc = $"data:image/jpg;base64,{base64}";
                <img src="@imgSrc" width="200" />
            }
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.name)
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.gender)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.age)
        </dd>
        <dt class="col-sm-2">
            IMDB Link
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Actor.imdbLink">@Model.Actor.imdbLink</a>
        </dd>
        <dt class="col-sm-2">
            Movies
        </dt>
        <dd class="col-sm-10">
            @if (Model.Movies.Any())
            {
                <ul>
                    @foreach (var m in Model.Movies)
                    {
                        <li>@m.title</li>
                    }
                </ul>
            }
        </dd>
        <dt class="col-sm-2">
            Tweets
        </dt>
        <dd class="col-sm-10">
            @if (Model.Tweets.Any())
            {
                <h3>Average Tweet Sentiment: @Model.AvgSentiment</h3>
                <table class="table table-hover" data-table>
                    <thead>
                        <tr>
                            <th>Tweet</th>
                            <th>Sentiment Analysis</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model.Tweets)
                        {
                            <tr>
                                <td>@m.Key</td>
                                <td>@m.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actor.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>