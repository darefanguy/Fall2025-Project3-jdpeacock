@model Fall2025_Project3_jdpeacock.Models.ViewModels.MovieInfoViewModel

@{
    ViewData["Title"] = "Details";

}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Poster
        </dt>
        <dd class="col-sm-10">
            @if (Model.Movie.poster != null)
            {
                var base64 = Convert.ToBase64String(Model.Movie.poster);
                var imgSrc = $"data:image/jpg;base64,{base64}";
                <img src="@imgSrc" width="200" />
            }
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.title)
        </dd>
        <dt class="col-sm-2">
            IMDB Link
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Movie.imdbLink">@Model.Movie.imdbLink</a>
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.genre)
        </dd>
        <dt class="col-sm-2">
            Release Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.releaseYear)
        </dd>
        <dt class="col-sm-2">
            Actors
        </dt>
        <dd class="col-sm-10">
            @if (Model.Actors.Any())
            {
                <ul>
                    @foreach (var a in Model.Actors)
                    {
                        <li>@a.name</li>
                    }
                </ul>
            }
        </dd>
        <dt class="col-sm-2">
            Reviews
        </dt>
        <dd class="col-sm-10">
            @if (Model.Reviews.Any()) 
            {
                <h3>Average Tweet Sentiment: @Model.AvgSentiment</h3>
                <table class="table table-hover" data-table>
                    <thead>
                        <tr>
                            <th>Review</th>
                            <th>Sentiment Analysis</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model.Reviews)
                        {
                            <tr>
                                <td>@review.Key</td>
                                <td>@review.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Movie?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>